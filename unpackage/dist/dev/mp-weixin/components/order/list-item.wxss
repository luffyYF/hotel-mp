
.order-list {
	width: 100%;
	height: 100%;
	overflow: hidden;
	background-color: #f5f9fc;
	font-weight: 500;
	font-family: -apple-system, 'Helvetica Neue', Roboto, sans-serif;
}
.order-list .list-item {
	padding: 20rpx 25rpx;
	background-color: white;
	margin-top: 25rpx;
}
.order-list .list-item .text-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-bottom: 20rpx;
}
.order-list .list-item .text-item .text-left {
	color: #888;
	-webkit-box-flex: 0.8;
	-webkit-flex: 0.8;
	    -ms-flex: 0.8;
	        flex: 0.8;
}
.order-list .list-item .text-item .text-right {
	color: #000;
	text-align: right;
	-webkit-box-flex: 0.2;
	-webkit-flex: 0.2;
	    -ms-flex: 0.2;
	        flex: 0.2;
	padding-top: 16rpx;
}
.order-list .list-item .text-item .text-right text {
	font-size: 33rpx;
}
.order-list .list-item .text-item .text-left .roomname {
	font-size: 30.7971rpx;
	display: block;
}
.order-list .list-item .text-item .text-left .roomcount {
	font-size: 25.36231rpx;
}
.order-list .list-item .item-price {
	text-align: right;
}
.order-list .list-item .item-price > text {
	font-size: 30.7971rpx;
	color: #888;
}
.order-list .list-item .item-price > text text {
	font-size: 30.7971rpx;
	color: #f72845;
	margin-left: 40rpx;
}
.order-list .list-item .item-img {
	border-radius: 15rpx;
	margin-bottom: 25rpx;
	height: 326.08695rpx;
	overflow: hidden;
}
.order-list .list-item .item-img .img {
	width: 100%;
	height: 100%;
	display: block;
}
.order-list .list-item .item-img .msg {
	height: 100rpx;
	position: relative;
	top: -100rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	background-color: rgba(0, 0, 0, 0.6);
}
.order-list .list-item .item-img .msg text {
	display: block;
}
.order-list .list-item .item-img .msg .msg-time {
	-webkit-box-flex: 0.8;
	-webkit-flex: 0.8;
	    -ms-flex: 0.8;
	        flex: 0.8;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 0 80rpx;
	text-align: center;
}
.order-list .list-item .item-img .msg .msg-time image {
	width: 40rpx;
	height: 40rpx;
	margin-top: 25rpx;
}
.order-list .list-item .item-img .msg .msg-time .in-time,
.msg-time,
.out-time {
	display: box;
	box-pack: center;
	box-orient: vertical;
	display: -webkit-box;
	-webkit-box-pack: center;
	-webkit-box-orient: vertical;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.order-list .list-item .item-img text {
	font-size: 27.17391rpx;
}
.order-list .list-item .item-img .cl-y {
	color: #ebe2bc;
}
.order-list .list-item .item-img .cl-w {
	color: #fff;
}
.order-list .list-item .item-img .msg .all-time {
	-webkit-box-flex: 0.2;
	-webkit-flex: 0.2;
	    -ms-flex: 0.2;
	        flex: 0.2;
	text-align: center;
	background-color: rgba(0, 0, 0, 0.3);
	display: box;
	box-pack: center;
	box-orient: vertical;
	display: -webkit-box;
	-webkit-box-pack: center;
	-webkit-box-orient: vertical;
}

